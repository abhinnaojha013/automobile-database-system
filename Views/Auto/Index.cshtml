@{
    ViewBag.Title = "Automobile";
}
<div>
    <div class="flex flex-centre-horizontal">
        <div class="flex-centre-horizontal">
            <a asp-controller = "Auto" asp-action = "Create" class="flex-centre-horizontal">
                <button>Add Automobile</button>
            </a>
        </div>
    </div>
    <div class="flex">
        <!--motorcycle table-->
        <div class="flex-centre-horizontal">
            <table border="1">
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Price</th>
                </tr>
                <tr>
                    <td>Yamaha</td>
                    <td>
                        <a asp-controller="Auto" asp-action="Details" asp-route-id="1">                     
                            R15
                        </a>
                    </td>
                    <td>400000</td>
                </tr>
                <tr>
                    <td>Honda</td>
                    <td>
                        <a asp-controller="Auto" asp-action="Details" asp-route-id="2">                     
                            Shine 125 SP
                        </a>
                    </td>
                    <td>250000</td>
                </tr>
            </table>
        </div>
        <!--car table-->
        <div class="flex-centre-horizontal">
            <table border="1">
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Price</th>
                </tr>
                <tr>
                    <td>Honda</td>
                    <td>
                        <a asp-controller="Auto" asp-action="Details" asp-route-id="3">                     
                            Civic
                        </a>
                    </td>
                    <td>3400000</td>
                </tr>
                <tr>
                    <td>Skoda</td>
                    <td>
                        <a asp-controller="Auto" asp-action="Details" asp-route-id="3">                     
                            Fabia
                        </a>
                    </td>
                    <td>4500000</td>
                </tr>
            </table>
        </div>
    </div>
</div>